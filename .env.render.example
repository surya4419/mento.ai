# Environment variables for Render deployment
# Copy these values to your Render dashboard environment variables

# Backend Environment Variables
NODE_ENV=production
PORT=3001
TAVUS_API_KEY=your_tavus_api_key_here
TAVUS_API_URL=https://tavusapi.com/v2
TAVUS_REPLICA_ID=your_replica_id_here
TAVUS_DEFAULT_PERSONA_ID=your_persona_id_here  # Optional
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Frontend Environment Variables (VITE_ prefix for Vite)
VITE_API_BASE_URL=https://your-backend-app-name.onrender.com/api
VITE_TAVUS_API_KEY=your_tavus_api_key_here
VITE_TAVUS_API_URL=https://tavusapi.com/v2
VITE_TAVUS_REPLICA_ID=your_replica_id_here
VITE_TAVUS_DEFAULT_PERSONA_ID=your_persona_id_here  # Optional
VITE_ENABLE_TAVUS=true
VITE_ENABLE_AUTH=false
VITE_DEV_MODE=false