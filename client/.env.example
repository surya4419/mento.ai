# Client Environment Variables Template
# Copy this file to .env and update with your actual values

# API Configuration
VITE_API_BASE_URL=http://localhost:3001/api  # Change to your backend URL for production

# Tavus Configuration
VITE_TAVUS_API_KEY=your_real_tavus_api_key_here
VITE_TAVUS_API_URL=https://tavusapi.com/v2
VITE_TAVUS_REPLICA_ID=your_replica_id_here
VITE_TAVUS_DEFAULT_PERSONA_ID=your_persona_id_here  # Optional

# Feature Flags
VITE_ENABLE_TAVUS=true
VITE_ENABLE_AUTH=false

# Development
VITE_DEV_MODE=true  # Set to false for production